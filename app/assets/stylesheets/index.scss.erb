.top{
  width: 100%;
  height: 350px;
  background-image: image-url('top.png');
  background-size: cover;
}

.top-container {
  height: 70px;
  margin: 50px auto;
}

.top-title {
  font-size: 30px;
  font-weight: bold;
  text-align: left;
  margin-bottom: 20px;
  color: white;
  text-shadow: 0 0 20px #333;
}

.top-subtitle {
  font-size: 17px;
  text-align: left;
  margin-bottom: 30px;
  color: white;
  font-weight: bold;
  text-shadow: 0 0 10px #333;
}

.study-btn {
  & a{
    color: white;
    background-color: #eb6100;
    border-radius: 100vh;
    padding: 12px 24px;
    text-decoration: none;
    font-size: 19px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
    letter-spacing: 0.1em;
    &:hover {
      color: #fff;
      background: #f56500;
    }
  }
}

.btn2 {
  margin-right: 10px;
}